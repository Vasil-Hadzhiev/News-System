@using NewsSystem.Models.ViewModels.Category
@using PagedList
@using PagedList.Mvc
@model IPagedList<CategoriesViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Categories</h1>

@Html.ActionLink("Create Category", "Create", null, new { @class = "btn btn-success" })

<hr />

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = category.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = category.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager(Model, page => Url.Action("All", new { page }))
}